
@using VendingWeb.Models
@model UserModel


<h1>Register a new user</h1>

<form method="post" action="@Url.Action("Register")">

    <table>

        <tr>
            <th>First Name</th>
            <td>@Html.EditorFor(m => m.FirstName)</td>
            <td>@Html.ValidationMessageFor(m => m.FirstName)</td>
        </tr>
        <tr>
            <th>Last Name</th>
            <td>@Html.EditorFor(m => m.LastName)</td>
            <th>@Html.ValidationMessageFor(m => m.LastName)</th>
        </tr>
        <tr>
            <th>Email Address</th>
            <td>@Html.EditorFor(m => m.Email)</td>
            <td>@Html.ValidationMessageFor(m => m.Email)</td>
        </tr>
        <tr>
            <th>Password</th>
            <td>@Html.EditorFor(m => m.Password)</td>
            <td>@Html.ValidationMessageFor(m => m.Password)</td>
        </tr>
        <tr>
            <th>Confirm Password</th>
            <td>@Html.EditorFor(m => m.ConfirmPassword)</td>
            <td>@Html.ValidationMessageFor(m => m.ConfirmPassword)</td>
        </tr>
        <tr>
            <th>Birthday</th>
            <td>@Html.EditorFor(m => m.Birthday)</td>
            <td>@Html.ValidationMessageFor(m => m.Birthday)</td>
        </tr>
        <tr>
            <th>Phone Number</th>
            <td>@Html.EditorFor(m => m.Phone)</td>
            <td>@Html.ValidationMessageFor(m => m.Phone)</td>
        </tr>
        <tr>
            <th colspan="2">
                <input type="submit" />
            </th>
        </tr>

    </table>

</form>


