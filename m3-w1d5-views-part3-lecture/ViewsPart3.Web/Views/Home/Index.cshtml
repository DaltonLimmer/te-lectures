@*
    Our Model for this View is a Person
    It represents an instance of the Person class
*@

@*
    Here we will create HTML elements that rely on the Model.
    Our View is bound to "Model" which is a Property accessible to the View
*@

@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <h2 class="center">@Model.FirstName @Model.LastName</h2>
        <p class="center">from @Model.Hometown</p>


        <table class="center">
            <tr>
                <td>Interests</td>
            </tr>
            @foreach (string interest in Model.Interests)
            {
                <tr>
                    <td>@interest</td>
                </tr>
            }
        </table>

        </p>
