@*
    Our Model for this View is a List of Strings (e.g. List<string>)
    It represents a list of strings that are color values
*@

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section headSection {
    <title>Colors</title>
}

@section navList{
    <ul>
        <li>@Html.ActionLink("List of People", "Team")</li>
        <li>@Html.ActionLink("Luke", "Index", "Home", new { id = "Luke" }, null)</li>
        <li>@Html.ActionLink("Anakin", "Index", "Home", new { id = "Anakin" }, null)</li>
        <li>@Html.ActionLink("Rey", "Index", "Home", new { id = "Rey" }, null)</li>
    </ul>
}


<h2 class="center">List of Colors</h2>
<table class="center">
    <tr>
        <td>Colors</td>
    </tr>
    @* Model refers to a List<string> *@
    @foreach (string color in Model)
    {
        <tr style="background-color: @color; opacity: 0.6">
            <td style="color:#FFF">@color</td>
        </tr>
    }
</table>
